<% if scope.lookupvar('::nfs::mountd_nfs_v1') then -%>
MOUNTD_NFS_V1=yes
<% else -%>
MOUNTD_NFS_V1=no
<% end -%>
<% if scope.lookupvar('::nfs::mountd_nfs_v2') then -%>
MOUNTD_NFS_V2=yes
<% else -%>
MOUNTD_NFS_V2=no
<% end -%>
<% if scope.lookupvar('::nfs::mountd_nfs_v3') then -%>
MOUNTD_NFS_V3=yes
<% else -%>
MOUNTD_NFS_V3=no
<% end -%>
RQUOTAD="<%= scope.lookupvar('::nfs::rquotad') %>"
RQUOTAD_PORT=<%= scope.lookupvar('::nfs::rquotad_port') %>
<% if has_variable?('rpcrquotadopts') and !@rpcrquotadopts.empty? then -%>
RPCRQUOTADOPTS="<%= @rpcrquotadopts %>"
<% end -%>
<% if has_variable?('lockd_arg') and !@lockd_arg.empty? then -%>
LOCKD_ARG="<= lockd_arg %>"
<% end -%>
LOCKD_TCPPORT=<%= scope.lookupvar('::nfs::lockd_tcpport') %>
LOCKD_UDPPORT=<%= scope.lookupvar('::nfs::lockd_udpport') %>
<% if has_variable?(scope.lookupvar('::nfs::rpcnfsdargs')) and !scope.lookupvar('::nfs::rpcnfsdargs').empty? then -%>
RPCNFSDARGS="<%= scope.lookupvar('::nfs::rpcnfsdargs') %>"
<% end -%>
RPCNFSDCOUNT=<%= scope.lookupvar('::nfs::rpcnfsdcount') %>
NFSD_V4_GRACE=<%= scope.lookupvar('::nfs::nfsd_v4_grace') %>
<% if has_variable?('nfsd_module') and !@nfsd_module.empty? then -%>
NFSD_MODULE="noload"
<% end %>
<% if has_variable?('rpcmountdopts') and !@rpcmountdopts.empty? then -%>
RPCMOUNTDOPTS="<%= @rpcmountdopts %>"
<% end -%>
MOUNTD_PORT=<%= scope.lookupvar('::nfs::mountd_port') %>
<% if has_variable?('statdarg') and !@statdarg.empty? then -%>
STATDARG=""
<% end -%>
STATD_PORT=<%= scope.lookupvar('::nfs::statd_port') %>
STATD_OUTGOING_PORT=<%= scope.lookupvar('::nfs::statd_outgoing_port') %>
<% if has_variable?('statd_ha_callout') and !@statd_ha_callout.empty? then -%>
STATD_HA_CALLOUT="<%= @statd_ha_callout %>"
<% end -%>
<% if has_variable?('rpcidmapdargs') and !@rpcidmapdargs.empty? then -%>
RPCIDMAPDARGS="<%= @rpcidmapdargs %>"
<% end -%>
<% if scope.lookupvar('::nfs::secure_nfs') then -%>
SECURE_NFS=yes
<% else -%>
SECURE_NFS=no
<% end -%>
<% if has_variable?('rpcgssdargs') and !@rpcgssdargs.empty? then -%>
RPCGSSDARGS="<%= @rpcgssdargs %>"
<% end -%>
<% if has_variable?('rpcsvcgssdargs') and !@rpcsvcgssdargs.empty? then -%>
RPCSVCGSSDARGS="<%= @rpcsvcgssdargs %>"
<% end -%>
